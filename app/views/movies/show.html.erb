<div class="container mt-5">
  <h1 class="mb-4"><%= @movie.title %></h1>

  <% if @movie.poster_url.present? %>
    <div class="mb-4">
      <%= image_tag @movie.poster_url, alt: @movie.title, class: "img-fluid", style: "max-height: 450px;" %>
    </div>
  <% else %>
    <p class="text-muted">Aucune affiche disponible.</p>
  <% end %>

  <p><strong>Résumé :</strong> <%= @movie.overview || "Non renseigné" %></p>
  <p><strong>Note :</strong> <%= @movie.rating || "Non noté" %></p>

  <%= link_to '⬅ Retour', movies_path, class: 'btn btn-primary mt-3' %>
</div>
