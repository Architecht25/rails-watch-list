<h1>Mes listes de films</h1>

<ul>
  <% @lists.each do |list| %>
    <li>
      <%= link_to list.name, list_path(list) %>

      <%= link_to "Supprimer", list_path(list), method: :delete, data: { confirm: "Tu es sûr ?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "➕ Nouvelle liste", new_list_path, class: "btn btn-primary mb-3" %>
